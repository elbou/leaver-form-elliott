{
  "_id": "page.leaver-details",
  "_type": "page.form",
  "components": [
    {
      "_id": "page.leaver-details--date.leave-date",
      "_type": "date",
      "label": "Leave Date",
      "name": "leave-date"
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "$field": true,
      "_id": "page.leaver-details--text.first-name",
      "_type": "text",
      "label": "First name",
      "name": "first-name"
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "$field": true,
      "_id": "page.leaver-details--text.last-name",
      "_type": "text",
      "label": "Last name",
      "name": "last-name"
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "$field": true,
      "_id": "page.leaver-details--text.email",
      "_type": "text",
      "errors": {
        "pattern": {
          "inline": "Please enter a valid email"
        }
      },
      "label": "Leaver email address",
      "name": "email",
      "validation": {
        "pattern": "*@*.gov.uk"
      }
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "$field": true,
      "_id": "page.leaver-details--text.job-title",
      "_type": "text",
      "label": "Job title",
      "name": "job-title"
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "_id": "page.leaver-details--radios.employment-type",
      "_type": "radios",
      "items": [
        {
          "$component": true,
          "$definition": true,
          "$option": true,
          "_id": "page.leaver-details--radios.employment-type--radio.Permanent",
          "_type": "radio",
          "label": "Permanent",
          "value": "Permanent"
        },
        {
          "$component": true,
          "$definition": true,
          "$option": true,
          "_id": "page.leaver-details--radios.employment-type--radio.Contractor",
          "_type": "radio",
          "label": "Contractor",
          "value": "Contractor"
        },
        {
          "$component": true,
          "$definition": true,
          "$option": true,
          "_id": "page.leaver-details--radios.employment-type--radio.other",
          "_type": "radio",
          "hint": "If other, then please complete the following question",
          "label": "Other",
          "value": "other"
        }
      ],
      "legend": "Employment Type",
      "name": "employment-type"
    },
    {
      "$component": true,
      "$control": true,
      "$definition": true,
      "$field": true,
      "_id": "page.leaver-details--text.other-employment-type",
      "_type": "text",
      "label": "Other Employment Type",
      "name": "other-employment-type",
      "validation": {
        "required": {
          "identifier": "employment-type",
          "operator": "is",
          "value": "other"
        }
      }
    }
  ],
  "heading": "Leaver Details",
  "url": "leaver-details"
}